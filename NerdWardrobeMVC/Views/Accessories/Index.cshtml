@model IEnumerable<NerdWardrobeMVC.Models.Accessory>

@{
    ViewBag.Title = "Accessory List";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-3">
            <div class="thumbnail">
                <img src="@Url.Content(@item.AccessPhoto)" />
                <div class="caption">
                    <h3>@Html.DisplayFor(modelItem => item.AccessName)</h3>
                    <button type="button" class="btn btn-default">@Html.ActionLink("Details", "Details", new { id = item.AccessoriesID })</button>

                    <hr />
                    @Html.ActionLink("Edit", "Edit", new { id = item.AccessoriesID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.AccessoriesID })

                </div>
            </div>
        </div>
     }
  </div>
